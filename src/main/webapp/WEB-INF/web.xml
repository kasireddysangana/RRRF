<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
  	<servlet-name>GetRegisteredAdvisorsServlet</servlet-name>
  	<display-name>GetRegisteredAdvisorsServlet</display-name>
  	<description></description>
  	<servlet-class>com.kasi.rrrf.servlet.GetRegisteredAdvisorsServlet</servlet-class>
  </servlet>
  
  
  <servlet>
  	<servlet-name>AdvisorRegistrationServlet</servlet-name>
  	<display-name>AdvisorRegistrationServlet</display-name>
  	<description></description>
  	<servlet-class>com.kasi.rrrf.servlet.AdvisorRegistrationServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>ClientRegistrationServlet</servlet-name>
  	<display-name>ClientRegistrationServlet</display-name>
  	<description></description>
  	<servlet-class>com.kasi.rrrf.servlet.ClientRegistrationServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>GetReviewsAndRatingServlet</servlet-name>
  	<display-name>GetReviewsAndRatingServlet</display-name>
  	<description></description>
  	<servlet-class>com.kasi.rrrf.servlet.GetReviewsAndRatingServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>GetRegisteredAdvisorsByLocationServlet</servlet-name>
  	<display-name>GetRegisteredAdvisorsByLocationServlet</display-name>
  	<description></description>
  	<servlet-class>com.kasi.rrrf.servlet.GetRegisteredAdvisorsByLocationServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>AdvisorRegistrationServlet</servlet-name>
  	<url-pattern>/AdvisorRegistrationServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ClientRegistrationServlet</servlet-name>
  	<url-pattern>/ClientRegistrationServlet/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>GetRegisteredAdvisorsServlet</servlet-name>
  	<url-pattern>/index</url-pattern>
  	
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>GetReviewsAndRatingServlet</servlet-name>
  	<url-pattern>/GetReviewsAndRatingServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>GetRegisteredAdvisorsByLocationServlet</servlet-name>
  	<url-pattern>/GetRegisteredAdvisorsByLocationServlet</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
	<welcome-file>GetRegisteredAdvisorsServlet</welcome-file> 
</welcome-file-list>
</web-app>
